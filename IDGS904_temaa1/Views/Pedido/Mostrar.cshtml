@model List<string>

<h2>Pedidos guardados</h2>

@if (Model != null && Model.Count > 0)
{
    <table>
        <tr>
            <th>Fecha y hora</th>
            <th>Nombre</th>
            <th>Dirección</th>
            <th>Teléfono</th>
            <th>Tamaño de pizza</th>
            <th>Ingredientes</th>
            <th>Cantidad</th>
            <th>Subtotal</th>
            <th>Total</th>
        </tr>
        @foreach (var linea in Model)
        {
            var campos = linea.Split(',');
            <tr>
                @foreach (var campo in campos)
                {
                    <td>@campo.Trim()</td>
                }
            </tr>
        }
    </table>
}
else
{
    <p>No hay pedidos guardados.</p>
}
