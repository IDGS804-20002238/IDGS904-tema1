@model IDGS904_temaa1.Models.Traductor

@{
    ViewBag.Title = "Buscar";
}

@using (Html.BeginForm("Buscar", "Traductor", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Texto a buscar:", htmlAttributes: new { @class = "control-label" })
        @Html.TextBox("texto", null, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.Label("Idioma:", htmlAttributes: new { @class = "control-label" })

        <div class="form-check">
            @Html.RadioButton("idioma", "ingles", new { @class = "form-check-input" })
            @Html.Label("Inglés", htmlAttributes: new { @class = "form-check-label" })
        </div>

        <div class="form-check">
            @Html.RadioButton("idioma", "espanol", new { @class = "form-check-input" })
            @Html.Label("Español", htmlAttributes: new { @class = "form-check-label" })
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Buscar" class="btn btn-primary" />
    </div>
}

@if (!string.IsNullOrEmpty(ViewBag.Traduccion))
{
    <div class="alert alert-success">
        <strong>Traducción:</strong> @ViewBag.Traduccion
    </div>
}
else if (!string.IsNullOrEmpty(ViewBag.Mensaje))
{
    <div class="alert alert-warning">
        @ViewBag.Mensaje
    </div>
}

<div>
    @Html.ActionLink("Volver al inicio", "Index", "Traductor", null, new { @class = "btn btn-primary" })
</div>
